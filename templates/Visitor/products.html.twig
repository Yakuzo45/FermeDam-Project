<div class="img-fluid bgded" id="produits" style="background-image:url({{ asset('build/images/bg_produits.jpg') }});">
    <section id="testimonials" class="hoc container clear mb-5">
        <div class="center btmspace-50">
            <h2 class="heading">Nos Produits</h2>
            <p class="text-danger">Nous ne travaillons que sur commande</p>
            <p class="text-black-50">Voici nos colis pour la saison : {{ season.name }} </p>
        </div>
        {% for colis in colis[0:4] %}
            {% if loop.index is odd %}
                    <div class="one_half first mb-3">
                        <div class="clear"><span><strong>Colis n°{{ loop.index }}</strong> / <em>{{ colis.price }} € le Kg</em><br>
                            <em>({{ colis.weight }})</em></span>
                            <blockquote class="mt-3">{{ colis.description }}</blockquote>
                        </div>
                    </div>
                {% else %}
                    <div class="one_half mb-3">
                        <div class="clear"><span><strong>Colis n°{{ loop.index }}</strong> / <em>{{ colis.price }} € le Kg</em><br>
                            <em>({{ colis.weight }})</em></span>
                        <blockquote class="mt-3">{{ colis.description }}</blockquote>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
    </section>
    {% if colis|length > 4 %}
    <div class="row justify-content-center">
        <button type="button" class="btn btn-primary btn-modal" data-toggle="modal" data-target="#ModalColis">Voir plus de colis pour cette saison</button>
    </div>

        <div class="modal fade" id="ModalColis" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Voici les autres colis de la saison : {{ season.name }}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <hr>
                        <div id="testimonials" class="hoc container clear">
                        {% for colis in colis[0:] %}
                            {% if loop.index is odd %}
                                <div class="one_half first mb-3">
                                    <div class="clear"><span><strong>Colis n°{{ loop.index }}</strong> / <em>{{ colis.price }} € le Kg</em><br>
                                        <em>({{ colis.weight }})</em></span>
                                        <blockquote>{{ colis.description }}</blockquote>
                                    </div>
                                </div>
                            {% else %}
                                <div class="one_half mb-3">
                                    <div class="clear"><span><strong>Colis n°{{ loop.index }}</strong> / <em>{{ colis.price }} € le Kg</em><br>
                                        <em>({{ colis.weight }})</em></span>
                                        <blockquote>{{ colis.description }}</blockquote>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
